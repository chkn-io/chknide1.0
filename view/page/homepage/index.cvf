      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Open Project</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="project-drawer">
          <ul class="project-list">
            
